{
  "name": "@ficusjs/devtools",
  "version": "0.1.0",
  "description": "Chrome and Firefox devtools extension for debugging FicusJS applications",
  "scripts": {
    "build": "web-ext build -s src --overwrite-dest",
    "dev": "run-p dev:*",
    "dev:test": "http-server",
    "dev:ext": "web-ext run -s src",
    "predev": "mkdirp src/lib && run-p copy:*",
    "copy:ficusjs": "ncp ./node_modules/ficusjs/dist/index.mjs src/lib/ficusjs.mjs",
    "copy:polyfill": "ncp ./node_modules/webextension-polyfill/dist/browser-polyfill.min.js src/lib/browser-polyfill.js",
    "lint:styles": "stylelint \"src/**/*.css\"",
    "lint:js": "standard \"src/devtools/**/*.js\""
  },
  "author": "Matt Levy",
  "license": "MIT",
  "devDependencies": {
    "ficusjs": "3.8.3",
    "http-server": "13.0.2",
    "mkdirp": "1.0.4",
    "ncp": "2.0.0",
    "npm-run-all": "4.1.5",
    "standard": "16.0.3",
    "stylelint": "13.13.1",
    "stylelint-config-standard": "22.0.0",
    "web-ext": "6.4.0",
    "webextension-polyfill": "0.8.0"
  }
}
